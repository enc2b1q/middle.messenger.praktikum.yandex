{
  "compilerOptions": {
    "outDir": "build",
    "target": "esnext",
    "declaration": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
  }
}
